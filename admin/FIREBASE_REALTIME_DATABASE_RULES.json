{
  "rules": {
    "users": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "gameConfig": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    },
    "locations": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      "$locationId": {
        ".read": true
      }
    },
    "admins": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      "$adminId": {
        ".write": "auth != null && auth.uid == $adminId"
      }
    },
    "auditLogs": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".indexOn": "timestamp"
    },
    "systemLogs": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    },
    "rankings": {
      ".read": "auth != null",
      ".indexOn": "points",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "ghosts": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      "$ghostId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
      }
    },
    "events": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      "$eventId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
      }
    }
  }
}